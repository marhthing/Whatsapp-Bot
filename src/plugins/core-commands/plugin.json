{
  "name": "core-commands",
  "displayName": "Core Commands",
  "description": "Essential bot commands for system management and configuration",
  "version": "1.0.0",
  "author": "WhatsApp Bot System",
  "enabled": true,
  "ownerOnly": true,
  "priority": 1,
  "dependencies": [],
  "commands": [
    {
      "name": "help",
      "description": "Show available commands and help information",
      "usage": "help [command]",
      "ownerOnly": false
    },
    {
      "name": "info",
      "description": "Display bot information and statistics",
      "usage": "info",
      "ownerOnly": true
    },
    {
      "name": "settings",
      "description": "Configure bot settings",
      "usage": "settings [option] [value]",
      "ownerOnly": true
    },
    {
      "name": "allow",
      "description": "Allow a user to execute specific commands",
      "usage": "allow @user command",
      "ownerOnly": true
    },
    {
      "name": "disallow",
      "description": "Remove user's command permissions",
      "usage": "disallow @user [command]",
      "ownerOnly": true
    },
    {
      "name": "status",
      "description": "Show bot system status",
      "usage": "status",
      "ownerOnly": true
    },
    {
      "name": "reload",
      "description": "Reload plugins or specific components",
      "usage": "reload [plugin]",
      "ownerOnly": true
    },
    {
      "name": "env",
      "description": "Manage environment variables",
      "usage": "env [get|set|list] [key] [value]",
      "ownerOnly": true
    }
  ],
  "features": [
    "system-management",
    "configuration",
    "help-system",
    "environment-management"
  ],
  "permissions": [
    "system:read",
    "system:write",
    "environment:read",
    "environment:write",
    "users:manage"
  ]
}
